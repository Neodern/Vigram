{
  "name": "Vigram - Vine & Instagram downloader",
  "short_name": "Vigram",
  "version": "0.3",
  "description": "Download pics & videos from Vine & Instagram with a single click !",
  "icons": {
    "16" : "medias/images/vigram-white.png",
    "48" : "medias/images/vigram-white.png",
    "128" : "medias/images/vigram-white.png"
  },
  "default_locale" : "en",
  "manifest_version": 2,
  
  "content_scripts": [ {
    "matches": ["http://instagram.com/*", "https://vine.co/v/*"],
    "js": [ "jquery-2.0.3.min.js", "vigram.js" ],
    "css": ["medias/css/vigram.css"]
  }],
  
  "permissions":    [
    "tabs", "http://instagram.com/*", "https://vine.co/v/*"
  ],

  "web_accessible_resources": [
      "jquery-2.0.3.min.map",
      "medias/images/vigram-black.png",
      "medias/images/vigram-white.png",
      "medias/images/vigram-white-25.png",
      "medias/images/vigram_25.png",
      "medias/images/vigram_48.png"
  ]
}